<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	package="info.jukov.yandextranslatetest">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:fullBackupContent="false"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:name=".TranslateApp"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<activity android:name=".ui.screen.activity.ScreenSplashActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name=".ui.screen.activity.ScreenMainActivity"/>

		<activity android:name=".ui.screen.activity.ScreenSettingsActivity"/>

	</application>

</manifest>
