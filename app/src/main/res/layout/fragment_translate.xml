<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/spinnerContainer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:orientation="horizontal">

		<Spinner
			android:id="@+id/spinnerInputLanguage"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>

		<Spinner
			android:id="@+id/spinnerOutputLanguage"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>

	</LinearLayout>

	<View
		android:id="@+id/divider"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_below="@id/spinnerContainer"
		android:background="@color/divider_black12"/>

	<EditText
		android:id="@+id/editTextTranslatable"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/divider"
		android:inputType="text"
		android:minLines="3"
		tools:text="Привет"/>

	<Button
		android:id="@+id/buttonTranslate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/editTextTranslatable"
		android:text="@string/screen_main_buttonTranslate"/>

	<TextView
		android:id="@+id/textViewTranslated"
		style="@style/TextTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/buttonTranslate"
		android:layout_marginLeft="@dimen/space_all_horizontal"
		android:layout_marginRight="@dimen/space_all_horizontal"
		android:layout_marginTop="@dimen/space_all_between_content"
		tools:text="Время"/>

	<TextView
		android:id="@+id/textViewDict"
		style="@style/TextTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/textViewTranslated"
		android:layout_marginLeft="@dimen/space_all_horizontal"
		android:layout_marginRight="@dimen/space_all_horizontal"
		android:layout_marginTop="@dimen/space_all_between_content"
		tools:text="Time (существительное) [taɪm]"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/textViewDict">

		<LinearLayout
			android:id="@+id/containerDictResult"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"/>

	</ScrollView>

</RelativeLayout>