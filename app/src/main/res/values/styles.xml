<resources>

	<!--TODO: Styling-->

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

		<item name="colorButtonNormal">@color/colorPrimary</item>
		<item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Widget.Button.Inverse</item>
	</style>

	<style name="TabLayout" parent="Widget.Design.TabLayout">
		<item name="tabIndicatorColor">@color/colorAccent</item>
		<item name="tabSelectedTextColor">@android:color/white</item>
		<item name="tabTextColor">@android:color/white</item>
		<item name="android:background">@color/colorPrimary</item>
	</style>

	<style name="TextTitle">
		<item name="android:textSize">@dimen/textsize_title</item>
		<item name="android:textColor">@color/text_all_black87</item>
	</style>

	<style name="TextSubheading">
		<item name="android:textSize">@dimen/textsize_subheading</item>
		<item name="android:textColor">@color/text_all_black87</item>
	</style>

	<style name="TextBody">
		<item name="android:textSize">@dimen/textsize_body</item>
		<item name="android:textColor">@color/text_all_black54</item>
	</style>

	<style name="Divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/height_divider</item>
		<item name="android:background">@color/divider_black12</item>
	</style>

</resources>
